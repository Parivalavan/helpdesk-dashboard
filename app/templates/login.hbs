<div class="container-fluid mt-4">
  <div class="row">
    <div class='col-sm-6 offset-md-3'>
      <h1>Login to HelpDesk</h1>
      {{#if errorMessage}}
      <div class='alert alert-danger'>
        {{errorMessage}}
      </div>
      {{/if}}
      <form {{action "authenticate" on="submit"}}>
        <div class='form-group'>
          <label for="identification">e-mail</label>
          {{input value=identification placeholder="Enter Login" class='form-control'}}
        </div>
        <div class='form-group'>
          <label for="password">Password</label>
          {{input value=password type="password" placeholder="Enter Password" class='form-control'}}
        </div>
        <button type="submit" class='btn btn-primary'>Login</button>
      </form>
    </div>
  </div>
</div>

